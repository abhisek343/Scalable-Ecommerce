# Scalable E-commerce Backend - Environment Variables
# Copy this file to .env and fill in the values

# Database - MongoDB connection strings for each service
MONGO_URI_USERS=mongodb://mongo:27017/user_service_db
MONGO_URI_PRODUCTS=mongodb://mongo:27017/product_service_db
MONGO_URI_CART=mongodb://mongo:27017/cart_service_db
MONGO_URI_ORDER=mongodb://mongo:27017/order_service_db
MONGO_URI_PAYMENT=mongodb://mongo:27017/payment_service_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Inter-service Communication
PRODUCT_SERVICE_URI=http://product-service:5001

# Redis Configuration
REDIS_URL=redis://redis:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://ecommerce:ecommerce123@rabbitmq:5672

# Payment Service - Razorpay
# Get test keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
PAYMENT_RETURN_URL=http://localhost/payment-success

# Notification Service - Email (Nodemailer)
NODEMAILER_EMAIL=your-email@gmail.com
NODEMAILER_PASSWORD=your-app-password

# Notification Service - SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# CORS Configuration
CORS_ORIGIN=*

# Service Ports (defaults)
# user-service: 5000
# product-service: 5001
# shopping-cart-service: 5002
# order-service: 5003
# payment-service: 5004 (mapped to 5719 on host)
# notification-service: 5005

# Monitoring Dashboards (after docker-compose up)
# Grafana: http://localhost:3000 (admin/admin123)
# Prometheus: http://localhost:9090
# RabbitMQ Management: http://localhost:15672 (ecommerce/ecommerce123)
# Kibana: http://localhost:5601

# Swagger API Docs (per service)
# User Service: http://localhost:5000/api-docs
# Product Service: http://localhost:5001/api-docs
# Cart Service: http://localhost:5002/api-docs
# Order Service: http://localhost:5003/api-docs
# Payment Service: http://localhost:5719/api-docs
# Notification Service: http://localhost:5005/api-docs
